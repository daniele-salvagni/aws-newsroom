root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ts,tsx,js,jsx}]
indent_size = 2
max_line_length = 100

[*.json]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.sql]
indent_size = 4
max_line_length = 120

[*.md]
trim_trailing_whitespace = false
max_line_length = 80
