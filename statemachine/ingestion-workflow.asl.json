{
  "Comment": "AWS News Ingestion Workflow with AI Summary Generation",
  "QueryLanguage": "JSONata",
  "StartAt": "IngestNews",
  "States": {
    "IngestNews": {
      "Type": "Task",
      "Comment": "Ingest AWS What's New announcements",
      "Resource": "arn:aws:states:::lambda:invoke",
      "Arguments": {
        "FunctionName": "${IngestNewsFunction}",
        "Payload": "{% $states.input %}"
      },
      "Retry": [
        {
          "ErrorEquals": [
            "Lambda.ServiceException",
            "Lambda.AWSLambdaException",
            "Lambda.SdkClientException"
          ],
          "IntervalSeconds": 2,
          "MaxAttempts": 3,
          "BackoffRate": 2
        }
      ],
      "Assign": {
        "ingestionResult": "{% $states.result.Payload %}"
      },
      "Next": "GenerateSummaries"
    },
    "GenerateSummaries": {
      "Type": "Task",
      "Comment": "Generate AI summaries for articles without them",
      "Resource": "arn:aws:states:::lambda:invoke",
      "Arguments": {
        "FunctionName": "${GenerateSummariesFunction}",
        "Payload": {
          "batchSize": 100
        }
      },
      "Retry": [
        {
          "ErrorEquals": [
            "Lambda.ServiceException",
            "Lambda.AWSLambdaException",
            "Lambda.SdkClientException"
          ],
          "IntervalSeconds": 5,
          "MaxAttempts": 2,
          "BackoffRate": 2
        }
      ],
      "Output": {
        "ingestion": "{% $ingestionResult %}",
        "summaries": "{% $states.result.Payload %}"
      },
      "End": true
    }
  }
}
